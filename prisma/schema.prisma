generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  email     String     @unique
  name      String?
  image     String?
  role      UserRole   @default(USER)
  Document  Document[]
}

model Document {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  title            String
  author           User     @relation(fields: [authorId], references: [id])
  authorId         String
  parentDocumentId Int?
  isChild          Boolean?
  isArchived       Boolean
  level            Int
  content          String?
  coverImage       String?
  icon             String?
  isPublished      Boolean
}
